{
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.jshint": true,
    "source.fixAll.markdownlint": true,
    "source.fixAll.stylelint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "editor.cursorSurroundingLines": 2,
  "editor.defaultColorDecorators": true,
  "editor.fontFamily": "FiraCode Nerd Font Ret",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnPaste": true,
  "editor.guides.bracketPairs": true,
  "editor.hover.delay": 200,
  "editor.hover.hidingDelay": 200,
  "editor.language.colorizedBracketPairs": [
    "()",
    "[]",
    "{}"
  ],
  "editor.letterSpacing": 0,
  "editor.lineHeight": 1.5,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.tabSize": 4,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "csharp": true
  },
  "isort.args": [
    "--multi-line=3",
    "--trailing-comma",
    "--force-grid-wrap=0",
    "--use-parentheses",
    "--line-width=88"
  ],
  "isort.check": true,
  "isort.importStrategy": "fromEnvironment",
  "isort.interpreter": [],
  "isort.path": [],
  "isort.serverEnabled": true,
  "isort.severity": {
    "E": "Error",
    "W": "Warning"
  },
  "nix.serverSettings": {
    // settings for 'nil' LSP
    "nil": {
      "diagnostics": {
        "ignored": [
          "unused_binding",
          "unused_with"
        ]
      },
      "formatting": {
        "command": [
          "nixpkgs-fmt"
        ]
      }
    }
  },
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.callArgumentTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.defaultInterpreterPath": "/run/current-system/sw/bin/python",
  "terminal.integrated": {
    "fontFamily": "FiraCode Nerd Font Ret",
    "fontSize": 16,
    "lineHeight": 1.2
  },
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "xonsh",
  "terminal.integrated.profiles.linux": {
    "xonsh": {
      "args": [
        "-c",
        "nix develop path:/home/ralis/Config-Files/nixos --command xonsh"
      ],
      "path": "bash"
    }
  },
  "workbench.colorCustomizations": {
    "terminal.ansiBlue": "#00aaff"
  },
  "workbench.colorTheme": "Neon City",
  "workbench.iconTheme": "material-icon-theme"
}