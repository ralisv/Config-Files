{
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "editor.fontFamily": "FiraCode Nerd Font Ret",
  "editor.smoothScrolling": true,
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.5,
  "editor.minimap.enabled": false,
  "editor.tabSize": 4,
  "editor.fontSize": 15,
  "editor.letterSpacing": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollBeyondLastLine": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Neon City",
  "workbench.colorCustomizations": {
    "terminal.ansiBlue": "#00aaff"
  },
  "terminal.integrated": {
    "fontFamily": "FiraCode Nerd Font Ret",
    "fontSize": 16,
    "lineHeight": 1.2
  },
  "terminal.integrated.profiles.linux": {
    "xonsh": {
      "path": "bash",
      "args": [
        "-c",
        "nix develop path:/home/ralis/Config-Files/nixos --command xonsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "xonsh",
  "git.openRepositoryInParentFolders": "always",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "window.titleBarStyle": "custom",
  "codium.enable": true,
  "editor.formatOnPaste": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "csharp": true
  },
  "python.defaultInterpreterPath": "/run/current-system/sw/bin/python",
  "nix.serverSettings": {
    // settings for 'nil' LSP
    "nil": {
      "diagnostics": {
        "ignored": [
          "unused_binding",
          "unused_with"
        ]
      },
      "formatting": {
        "command": [
          "nixpkgs-fmt"
        ]
      }
    }
  }
}