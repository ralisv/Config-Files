{
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "isort.args": [
    "--multi-line=3",
    "--trailing-comma",
    "--force-grid-wrap=0",
    "--use-parentheses",
    "--line-width=88"
  ],
  "isort.check": true,
  "isort.severity": {
    "W": "Warning",
    "E": "Error"
  },
  "isort.path": [],
  "isort.interpreter": [],
  "isort.importStrategy": "fromEnvironment",
  "isort.serverEnabled": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "editor.fontFamily": "FiraCode Nerd Font Ret",
  "editor.smoothScrolling": true,
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.5,
  "editor.minimap.enabled": false,
  "editor.tabSize": 4,
  "editor.fontSize": 15,
  "editor.letterSpacing": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollBeyondLastLine": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Neon City",
  "workbench.colorCustomizations": {
    "terminal.ansiBlue": "#00aaff"
  },
  "terminal.integrated": {
    "fontFamily": "FiraCode Nerd Font Ret",
    "fontSize": 16,
    "lineHeight": 1.2
  },
  "terminal.integrated.profiles.linux": {
    "xonsh": {
      "path": "bash",
      "args": [
        "-c",
        "nix develop path:/home/ralis/Config-Files/nixos --command xonsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "xonsh",
  "git.openRepositoryInParentFolders": "always",
  "window.titleBarStyle": "custom",
  "codium.enable": true,
  "editor.formatOnPaste": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "csharp": true
  },
  "nix.serverSettings": {
    // settings for 'nil' LSP
    "nil": {
      "diagnostics": {
        "ignored": [
          "unused_binding",
          "unused_with"
        ]
      },
      "formatting": {
        "command": [
          "nixpkgs-fmt"
        ]
      }
    }
  },
  "python.defaultInterpreterPath": "/run/current-system/sw/bin/python",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.callArgumentTypes": true
}