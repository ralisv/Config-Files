# Set rainbow resolution
import colors

colors.RAINBOW_COLORS = generate_rainbow_colors(1024)

# Set initial rainbow index to pink
colors.RAINBOW_INDEX = 850


def enclose_in_brackets(text: str) -> str:
    return f"{rainbowize('[')}{text}{rainbowize(']')}{PINK}"


def git_info() -> str:
    try:
        repo = Repo(".", search_parent_directories=True)
    except InvalidGitRepositoryError:
        return ""

    try:
        branch = repo.active_branch.name
    except:
        return enclose_in_brackets(f"{WHITE}unknown")

    color = RED if repo.is_dirty(untracked_files=True) else GREEN

    if branch == "master":
        branch = "main"

    return enclose_in_brackets(f"{color}{branch}")


def path_info() -> str:
    return enclose_in_brackets(
        f"{colorize(os.getcwd()).replace(os.path.expanduser('~'), '~')}"
    )


def last_exit_code_info() -> str:
    exit_code = __xonsh__.env["LAST_RETURN_CODE"]
    return enclose_in_brackets(f"{RED}{exit_code}") if exit_code != 0 else ""


def reset() -> str:
    warnings.filterwarnings("ignore", category=DeprecationWarning)
    return WHITE


__xonsh__.env["PROMPT_FIELDS"]["git-info"] = git_info
__xonsh__.env["PROMPT_FIELDS"]["last-exit-code-info"] = last_exit_code_info
__xonsh__.env["PROMPT_FIELDS"]["path-info"] = path_info
__xonsh__.env["PROMPT_FIELDS"]["reset"] = reset
